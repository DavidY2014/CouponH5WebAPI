@model List<CouponViewModel>
@{
    ViewData["Title"] = "券管理";
    Layout = "~/BasePages/_Layout.cshtml";
}
<blockquote class="layui-elem-quote">
    <a class="layui-btn layui-btn-normal" href="/EnterCustom/AddNewCoupon">添加券</a>
</blockquote>
<fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
    <legend>券信息综合查询</legend>
</fieldset>
<div class="layui-fluid">
    <div class="layui-row" id="content_table">
        <table class="layui-table" lay-filter="test">
            <thead>
                <tr>
                    <th>
                        券码
                    </th>
                    <th>
                        密码
                    </th>
                    <th>
                        有效期
                    </th>
                    <th>
                        可用次数
                    </th>
                    <th>
                        总次数
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Code)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Password)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ValidityDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AvaliableCount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalCount)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Code" class="btn btn-primary m-1">编辑</a> |
                            <a asp-action="Details" asp-route-id="@item.Code" class="btn btn-primary m-1">详情</a> |
                            <a asp-action="Delete" asp-route-id="@item.Code" class="btn btn-primary m-1">删除</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div id="page"></div>
    </div>
</div>

